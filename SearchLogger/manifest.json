{
  "manifest_version": 3,
  "name": "Google Search Logger",
  "version": "1.0",
  "description": "Logs your search queries to backend.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icons/off.png",
      "48": "icons/off.png"
    }
  }
}
